{
    "database": {
        "credentials": {
            "user": "postgres",
            "database": "rallydb"
        },
        "available_databases": ["rallydb"],
        "reference": "db"
    },

    "table": {
        "reference": {
            "primary_table": "main",
            "history_table": "history",
            "both_tables": "tables"
        }
    },

    "other_reference": {
        "everything": ".",
        "commands": {
            "create": "create",
            "insert": "insert",
            "select": "select",
            "history": "history",
            "import": "import",
            "export": "export",
            "delete": "delete",
            "refresh": "refresh",
            "psql": "psql",
            "drop": "drop",
            "switch": "switch",
            "help": "help",
            "dashboard": "dashboard",
            "restart": "restart",
            "settings": "config",
            "end": "end"
        }
    },

    "command": {
        "select": {
            "records_order": {
                "from_oldest": ["oldest", "earliest", "first"],
                "from_newest": ["newest", "latest", "last", "recent"]
            }
        },
        "refresh": {
            "data_handling": {
                "keep": ["y", "yes", "k", "keep", "1"],
                "lose": ["n", "no", "l", "lose", "0"]
            },
            "keep_data_on_refresh": true
        },
        "insert": {
            "default_car": "i20",
            "default_car_code": "0",
            "confirmation_select_after_insert": true
        },
        "import": {
            "default_file_path": {
                "primary_table": "data/{database}/main.csv",
                "history_table": "data/{database}/history.csv"
            },
            "existing_data_options": {
                "override": ["y", "yes", "o", "over", "override", "1"],
                "dont_override": ["n", "no", "not", "d", "dont", "0"]
            },
            "override_data_on_import": false
        },
        "export": {
            "default_folder_path": {
                "primary_table": "data/{database}",
                "history_table": "data/{database}"
            },
            "default_file_name": {
                "primary_table": "main.csv",
                "history_table": "history.csv"
            }
        },
        "import__export": {
            "location_selection": {
                "GUI": "gui",
                "Default": "default"
            }
        },
        "switch": {
            "dashboard_after_switch": true
        }
    },
    
    "ui": {
        "dashboard": {
            "display_on_startup": true,
            "db_box_width": 23,
            "table_box_width": 27,
            "vertical_spacing": 3,
            "padding": 3
        },
        "help": {
            "main_menu_column_width": 25,
            "main_menu_columns_spacing": 8,
            "arguments_menu_width": -1
        }
    },

